	layers on


	# Options pour afficher le squelette topo,
	# les points et le nom des stations topos
	symbol-hide line survey
	#debug station-names
	debug off


	# Spécifier le pas de la grille, ici 100x100x100 metres
	# (Trois dimensions, oui, ça sert pour la coupe aussi) 
	#grid-size 100 100 100 m

	# Spécifier qu'il faut imprimer une grille
	# au dessous de la topo 
	#grid bottom

	grid off

endlayout


# 3-EXPORTS   
# Export des xvi pour le dessin 
export map -fmt xvi -layout xviexport -o Scialet Jeunesse d'Automne-map.xvi
export map -projection extended -fmt xvi -layout xviexport -o Scialet Jeunesse d'Automne-coupe.xvi

# Séléction des maps à exporter  
select MP-Scialet Jeunesse d'Automne#@Scialet Jeunesse d'Automne 
select MC-Scialet Jeunesse d'Automne#@Scialet Jeunesse d'Automne 
# Export des pdfs  
export map -projection extended -layout my_layout-coupe -o Scialet Jeunesse d'Automne-coupe.pdf
export map -o Outputs/Scialet Jeunesse d'Automne-plan.pdf -layout my_layout
# Export du modèle 3D  
export model -o Outputs/Scialet Jeunesse d'Automne.lox

# Export des fichier ESRI  
export map -proj plan -fmt esri -o Outputs/Scialet Jeunesse d'Automne -layout my_layout
# Export du fichier kml  
export map -proj plan -fmt kml -o Outputs/Scialet Jeunesse d'Automne.kml -layout my_layout

# Export des listes  
export continuation-list -o Outputs/ContinuationsScialet Jeunesse d'Automne.html 
export survey-list -location on -o Outputs/SurveysScialet Jeunesse d'Automne.html 
export cave-list -location on -o Outputs/Caves2020Scialet Jeunesse d'Automne.html 
